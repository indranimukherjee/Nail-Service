@model nail_in_nottingham.ViewModels.BookingViewModel

@{
    ViewBag.Title = "All Services";
}

@{

    var serviceDetailsList = (from s in Model.serviceBillDeskDetails
                              group s by s.ServiceID into temp
                              select new
                              {
                                  T1 = temp.Key.ToString(),
                                  T2 = temp
                              }).ToList();


}


