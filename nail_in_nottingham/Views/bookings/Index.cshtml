<script type="text/javascript">
    var counter = 0;
    var SelectedItems = "";
    var BillDeskId = ["0","0"];
    var varition = "";
    var timeDuration = "";
    var price = "";
    var quantity = "";


    //Show Details of Service
    function ShowModal(serviceName, serviceId) {
        var divModal = '#' + serviceName.replace(" ", "");

        var opt = {
            autoOpen: false,
            resizable: false,
            closeOnEscape: true,
            modal: true,
            width: 850,
            height: 'auto',
            position: {
                my: 'center',
                at: 'center'
            },
            buttons: {
                "Add To BiilDesk": function () {
                    if (BillDeskId > 0 ) {
                        if(!(SelectedItems.match("'" + BillDeskId + "'")))
                        {
                            SelectedItems = SelectedItems + " '" + BillDeskId + "'";
                            counter++;

                            $("#dvBillDesk").css("display", "block");
                            // $("#dvBillDesk").append('<div class="services"   >Hi </div>');
                            //add a row in billDesk
                            $('#tbBillDesk tr:last').after('<tr id="trNew' + counter + '"> <td> <img width="20px" height="20px" src="../Content/mytemplate/images/remove.png" onclick="RemoveRow(this,' + BillDeskId + ')" /> </td> <td>' + serviceName + '</td> <td>' + varition + '</td> <td>' + timeDuration + '</td> <td>' + price + '</td> <td><input type="number" value="1"  min="1" max="10" id="SQuantity' + BillDeskId + '" /></td> <td style="display:none"> ' + BillDeskId + '  </td></tr>');
                            $(this).dialog("close");
                            //showCheckOut Button
                            if ($('#booking-toggle').css('display', 'none')) {
                                $('#booking-toggle').css('display', 'inline-block');

                            }

                            BillDeskId = 0;
                            $('input[name="rdBooking"]').attr('checked', false);
                        }
                        else {
                            alert("Please Select Another ServiceType");
                        }
                    }
                    else {
                        alert("Please Select serviceType");
                    }
                        
                }
            },
            title: serviceName

        };
        var theDialog = $(divModal).dialog(opt);
        theDialog.dialog("open");
    }

    function SetValue(v, t, p) {
        BillDeskId = $("input[name=rdBooking]:checked").val();
        varition = v;
        timeDuration = t;
        price = p;
        //alert(BillDeskId);
    }

    function RemoveRow(btn, id) {
        var row = btn.parentNode.parentNode;
        row.parentNode.removeChild(row);
        SelectedItems = SelectedItems.replace("'" + id + "'", "");
        if ($('#tbBillDesk tr').length == 1) {
            $('#booking-toggle').css('display', 'none')
        }


    }

    $(document).ready(function () {

        $("#booking-toggle").click(function () {

            // Set the effect type
            var effect = 'slide';

            // Set the duration (default: 400 milliseconds)
            var duration = 500;

            $('#dvBookingDetails').toggle(effect, { direction: "right" }, duration);
        });


       


    });



    function BookingDateTime() {
        $('#test').DateTimePicker();
    }
     
</script>


@foreach (var item in serviceDetailsList)
{

    var divName = item.T2.ToList()[0].ServiceMaster.ServiceType.Replace(" ", "");
    <div id=@divName style="display:none">

        <table>
            <tr>
                <td align="left" style="padding-right:40px">
                    @{ string ImgPath = "../Content/mytemplate/images/ServiceImages/" + divName + ".jpg";}

                    <img src=@ImgPath height="190" width="344" alt="icon">
                </td>
                <td align="right">
                    <table border="1" style="text-align:center;border-collapse:collapse" width="100%">

                        <tr align="center">
                            <th width="40%">Services Type</th>
                            <th width="40%">Time Duration</th>
                            <th>Price</th>
                            <th>Booking</th>
                        </tr>
                        @for (int i = 0; i < @item.T2.ToList().Count(); i++)
                        {
                            var serviceVariation = item.T2.ToList()[i].ServiceVeriation.ServiceVariation.ToString();
                            var serviceDuration = item.T2.ToList()[i].ServiceDuration.ToString();
                            var servicePrice = item.T2.ToList()[i].ServicePrice.ToString();
                            //@item.T2.ToList()[i].ServiceVeriation.ServiceVariation.ToString()
                            <tr>
                                <td>@serviceVariation</td>
                                <td style="height:30px;width:50px;">@serviceDuration</td>
                                <td>@servicePrice</td>
                                <td>
                                    @*@Html.ActionLink("BOOKING", "Index", "bookings", new { @SBId = item.T2.ToList()[i].ID }, null)*@
                                    @Html.RadioButton("rdBooking", item.T2.ToList()[i].ID, new { onclick = String.Format("SetValue('{0}', '{1}','{2}')", serviceVariation, serviceDuration, servicePrice) })
                                </td>
                            </tr>

                        }
                    </table>
                </td>
            </tr>
        </table>

    </div>

                        }

<div id="dvBookingPage">
    @* ServiceList *@
    <div id="dvServiceList" class="float_l">
        <h2>ALL SERVICES</h2>
        @foreach (var item in serviceDetailsList)
        {
            <a href="javascript:void(0)" id="btn_click" onclick="ShowModal('@item.T2.ToList()[0].ServiceMaster.ServiceType.Replace(" "," ").ToString()','@item.T1.ToString()')">  @item.T2.ToList()[0].ServiceMaster.ServiceType.ToString() </a>
            <br />
                    <br />
        }
    </div>
    @* BillDeskItemList *@
    <div id="dvBillDeskItems" class="float_l">
        <h3>Bill Desk</h3>
        <div style="margin-right:1%">
            <table id="tbBillDesk" border="1" width="100%">
                <tr>
                    <th style=""></th>
                    <th width="40%">Service Name</th>
                    <th width="20%">Service Type</th>
                    <th>Time Duration</th>
                    <th width="10%">Price</th>
                    <th>No. Of Person</th>
                    <th style="display:none"></th>
                </tr>

                @if (Model.SelectedItem != null)
            {
                foreach (var item in Model.SelectedItem)
                {
                        <tr>
                            <td><img width="20px" height="20px" src="../Content/mytemplate/images/remove.png" onclick="RemoveRow(this)" /></td>
                            <td>@item.ServiceName</td>
                            <td>@item.serviceVeriation</td>
                            <td>@item.timeDuration</td>
                            <td>@item.price</td>
                            <td> <input type="number" value=@item.NoOfPerson min="1" max="10" id="SQuantity" /></td>
                            <td style="display:none">@item.ServiceBillDeskId</td>


                        </tr>

                    }

                }


            </table>
        </div>

        <br />
        <a href="#" class="btn btn-default" id="booking-toggle">Check Out</a>
    </div>

    <div id="dvBookingDetails" class="float_r col_last">
        <div style="padding-left:2%">
            <table>
                <tr>
                    <td>
                        First Name:
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.EditorFor(model => model.bookingServices.consumer_first_name)
                    </td>
                </tr>
                <tr>
                    <td>
                        Last Name:
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.EditorFor(model => model.bookingServices.consumer_last_name)
                    </td>
                </tr>
                <tr>
                    <td>
                        Mobile Number:
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.EditorFor(model => model.bookingServices.consumer__mobileno)
                    </td>
                </tr>
                <tr>
                    <td>E-mail:</td>
                </tr>
                <tr>
                    <td>@Html.EditorFor(model => model.bookingServices.consumer_email)</td>
                </tr>
                <tr>
                    <td>
                        Booking Date:
                    </td>
                </tr>
                <tr>
                    <td>
                      
                        <input type="text" data-field="datetime" value="@Model.bookingServices.booking_start_datetime" onclick="BookingDateTime()" /><div id="test"></div>
                        @*<div id="BookingDateTime"></div>*@
                        <input type="hidden" value="@Model.bookingServices.booking_end_datetime" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Total Amount:
                    </td>
                </tr>
                <tr>
                    <td><input type="text" value="@Model.bookingServices.TotalAmount"/></td>
                </tr>
                <tr>
                    <td>
                        Total Quantity:
                    </td>
                </tr>
                <tr>
                    <td><input type="text" value="@Model.bookingServices.TotalQuantity"/></td>
                </tr>
                

            </table>
        </div>
    </div>

    @* Booking Details *@
    <a href="#" class="back-to-top"><span style="color:white">BACK TO TOP</span></a>

</div>


